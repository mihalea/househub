@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="pb-2 my-4 border-bottom">
    <h2>Properties available</h2>
</div>

<div class="row">
    @if (Model.Accommodation.Count <= 0)
    {
        <div class="card col-md-12">
            <div class="card-body">
                We are really sorry, but there are no properties available.
            </div>
        </div>
    }
    else
    {
        @foreach (var item in Model.Accommodation)
         {
             <article class="col-md-4 pb-5">
                 <h4 class="border-bottom pb-2"><a href="#" class="text-dark"> @Html.DisplayFor(modelItem => item.Name) </a></h4>
                 <p>@Html.DisplayFor(modelItem => item.ShortDescription)</p>
                 <img src="@item.ImagePath" class="img-fluid"/>
             </article>
         }
    }
</div>